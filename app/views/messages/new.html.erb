<h1>Message a user</h1>
	<%= form_for(current_user.active_messages.build) do |f| %>
	<div class="well">
		<%= f.text_field :title, :placeholder => "title" %><br>
		<%= f.text_field :summary, :placeholder => "summary"  %><br>
		<%= f.text_area :body, rows: 10, :placeholder => "Body/Content"  %><br><hr>
		<p>recipient id  <span><i class="glyphicon glyphicon-exclamation-sign"></i><%= link_to "What is this", idinfo_path %></span></p><%= f.text_field :receiver_id  %><br><hr>
		<%= f.submit "Message", class: "btn btn-success" %>
	</div>
	<% end %>